extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let ballid = toShow._id 
    - let ball_colour = toShow.ball_colour
    - let ball_size = toShow.ball_size
    - let ball_cost = toShow.ball_cost 
    - let actionid = "/resource/ball/" + ballid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='ballAttr mr-3') Ball ID is: 
        div #{ballid} 
      div.row 
        div(class='ballAttr mr-3') Ball Colour is: 
        div #{ball_colour} 
      div.row 
        div(class='ballAttr mr-3') Ball Size is: 
        div #{ball_size} 
      div.row 
        div(class='ballAttr mr-3') Ball Cost is: 
        div #{ball_cost} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the ball collection 
      window.location.href='/ball' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'   
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/ball' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 